<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="SuperBasketball.AddItemWindow"
        Icon="Asset/logo2.ico"
        Title="SuperBasketball - Добавление игрока">
        <StackPanel Orientation="Vertical">
                <TextBlock Text="Имя"/>
                <TextBox Name="NameTextBox"/>
                <TextBlock Text="Вес"/>
                <NumericUpDown Name="MassNumericUpDown"/>
                <TextBlock Text="Рост"/>
                <NumericUpDown Name="HeightNumericUpDown"/>
                <TextBlock Text="Дата рождения"/>
                <DatePicker Name="BirthdayDatePicker"/>
                <TextBlock Text="Дата начала игры"/>
                <DatePicker Name="DateStartDatePicker"/>
                <TextBlock Text="Позиция"/>
                <ComboBox Name="PositionComboBox"/>
                <TextBlock Text="Команда"/>
                <ComboBox Name="TeamComboBox"/>
                
                <Button Name="Save" Click="Save_OnClick"/>
                <Button Name="Cancel" Click="Cancel_OnClick"/>
        </StackPanel>
</Window>
